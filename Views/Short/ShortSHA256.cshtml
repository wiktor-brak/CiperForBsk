@model CiperForBsk.Models.Message
@{
    ViewData["Title"] = "SHA256";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" text-center>
    <form asp-action="ShortSHA256" asp-controller="Short">
        <div class="form-group">

            <label asp-for="Msg">Wpisz wiadomość</label>
            <br />
            <input placeholder="a-z" type="text" asp-for="Msg" class="form-control-lg col-sm-5" />

        </div>
        <button asp-controller="Short" asp-action="ShortSHA256" class="btn btn-primary">Wykonaj</button>
        <div> @Model.Msg</div>
    </form>
</div>